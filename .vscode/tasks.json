{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run", "-s", "build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "identifier": "runGruntBuild",
            "problemMatcher": [
                "$tslint5",
                "$tsc",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
