{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "gulp",
            "task": "default",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ "$tslint5", "$tsc" ]
        },
        {
            "type": "gulp",
            "task": "lint",
            "group": "test",
            "problemMatcher": [ "$tslint5" ]
        }
    ]
}
