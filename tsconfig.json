{
	"compilerOptions": {
		"target": "es2017",
		"lib": [ "es2017" ],
		"outDir": "out",
		"module": "commonjs",
		"strictNullChecks": true,
		"removeComments": true,
		"moduleResolution": "node",
		"inlineSources": true,
		"allowJs": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"inlineSourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"charset": "utf8",
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"pretty": true,
		"newLine": "LF",
		"rootDir": "src"
	},
	"include": [
		"src/**/*",
		"typings/**/*"
	],
	"exclude": [
		"node_modules",
		"out"
	]
}
